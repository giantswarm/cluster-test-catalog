{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$ref": "#/definitions/TopLvl",
  "definitions": {
      "TopLvl": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
              "name": {
                  "type": "string"
              },
              "serviceType": {
                  "type": "string"
              },
              "project": {
                  "$ref": "#/definitions/Project"
              },
              "denyByDefault": {
                  "$ref": "#/definitions/Policy"
              },
              "allowEgressToDNS": {
                  "$ref": "#/definitions/Policy"
              },
              "allowEgressToProxy": {
                  "$ref": "#/definitions/ProxyPolicy"
              }
          },
          "required": [
              "denyByDefault",
              "allowEgressToDNS",
              "allowEgressToProxy",
              "name",
              "project",
              "serviceType"
          ]
      },
      "Policy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "enabled": {
                  "type": "boolean"
              },
              "namespaces": {
                  "type": "array"
              }
          },
          "required": [
              "enabled",
              "namespaces"
          ],
          "title": "Policy"
      },
      "ProxyPolicy": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "enabled": {
                  "type": "boolean"
              },
              "namespaces": {
                  "type": "array"
              },
              "httpProxy": {
                  "type": "string"
              },
              "httpsProxy": {
                  "type": "string"
              }
          },
          "required": [
              "enabled",
              "namespaces"
          ],
          "title": "Policy"
      },
      "Project": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
              "branch": {
                  "type": "string"
              },
              "commit": {
                  "type": "string"
              }
          },
          "required": [
              "branch",
              "commit"
          ],
          "title": "Project"
      }
  }
}
